{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react",
    "rootDirs": ["src", "tests"],
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"],
      "@/tests/*": ["../tests/*"]
    },
    "plugins": [{
      "name": "typescript-plugin-css-modules"
    }],
    "allowJs": true,
    "resolveJsonModule": true
  },
  "include": [
    "src",
    "tests",
    "src/config/scss.d.ts"
  ]
}
